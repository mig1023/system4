@page "/app/{appid:int}/create"
@model system4.Pages.Create.DocModel
@{
    ViewData["Title"] = "Doc";
}

<form method="post">
    <div class="container p-0">
        <h1 class="display-4 text-center">Создание договора:</h1>

        <div class="row text-start">
            <div class="col">
                <label for="VisaType" class="form-label">Номер записи:</label><br />
                <span class="fs-3">@DAL.Formats.Appointment(Model.Appointment.AppNum)</span>
            </div>
            <div class="col">
                <label for="VisaType" class="form-label">Тип визы:</label>
                <select class="form-select form-select-lg mb-3" id="VisaType" name="VisaType" aria-label="form-select-lg example">
                    @foreach (var visa in Model.VisaTypes)
                    {
                        <option value="@visa.Key">@visa.Value</option>
                    }
                </select>
            </div>

            <div class="col align-self-end application_service_button">
                <input type="checkbox" class="btn-check" id="Urgent" name="Urgent" value="true" autocomplete="off">
                <label class="btn btn-outline-primary btn-lg margin_doc_add_button" for="Urgent">срочная виза</label>
                <input type="hidden" name="Urgent" value="false" />
            </div>
        </div>

        @{
            foreach (DB.AppData app in Model.Appointment.AppData)
            {
                <div class="dynamic-field-row border doc_applicant_form">
                    <div class="row justify-content-center align-items-center application_row">
                        <div class="col">
                            <input type="checkbox" class="btn-check" id="DocPerson" name="DocPerson" value="true" autocomplete="off">
                            <label class="btn btn-outline-primary btn-sm doc_applicant_data" for="DocPerson">Оформление договора</label>
                            <input type="hidden" name="DocPerson" value="false" />

                            <div class="fs-6">@app.LName</div>
                            <div class="fs-6">@app.FName</div>
                            <div class="fs-6">@app.PassNum</div>
                        </div>
                        <div class="col">
                            <div class="fs-6">ФИО для договора:</div>
                            <input type="text" class="form-control form-control-sm doc_applicant_field" id="RLName" name="RLName" value="@app.RLName">
                            <input type="text" class="form-control form-control-sm doc_applicant_field" id="RFName" name="RFName" value="@app.RFName">
                            <input type="text" class="form-control form-control-sm" id="RMName" name="RMName" value="@app.RMName">
                        </div>
                        <div class="col">
                            <div class="fs-6">Дата рождения:</div>
                            <input type="text" class="form-control" id="BirthDate" name="BirthDate" value="@app.BirthDate.ToString("dd.MM.yyyy")">
                            <div class="fs-6">Дата вылета:</div>
                            <input type="text" class="form-control" id="FlyDate" name="FlyDate" value="@app.AppSDate.ToString("dd.MM.yyyy")">
                        </div>
                        <div class="col">
                            <div class="fs-6">BankID:</div>
                            <input type="text" class="form-control" id="BankID" name="BankID" value="2025/12345678">
                            <div class="fs-6">Запрос:</div>
                            <div class="input-group">
                                <select class="form-select form-select-sm doc_applicant_select" id="Request" name="Request" aria-label="form-select-sm example"></select>
                                <span class="input-group-btn">
                                    <button id="addRequest" type="button" class="btn btn-outline-primary padding_search_buttons">+</button>
                                </span>
                            </div>
                        </div>
                        <div class="col">
                            <input type="checkbox" class="btn-check" id="Concil" name="Concil" value="true" autocomplete="off">
                            <label class="btn btn-outline-primary btn-sm doc_applicant_checkbox" for="Concil">не платит консульский сбор</label>
                            <input type="hidden" name="Concil" value="false" />

                            <br />

                            <input type="checkbox" class="btn-check" id="iRes" name="iRes" value="true" autocomplete="off">
                            <label class="btn btn-outline-primary btn-sm doc_applicant_checkbox" for="iRes">не резидент</label>
                            <input type="hidden" name="iRes" value="false" />

                            <br />

                            <input type="checkbox" class="btn-check" id="Remove" name="Remove" value="true" autocomplete="off">
                            <label class="btn btn-outline-danger btn-sm doc_applicant_checkbox" for="Remove">не включать в договор</label>
                            <input type="hidden" name="Remove" value="false" />
                        </div>
                    </div>
                </div>
            }
        }

        <button type="submit" class="btn btn-primary">создать договор</button>

    </div>
</form>