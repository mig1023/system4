@using System.Security.Claims

@{
    var fullUserName = Context.Session.GetString("fullUserName") ?? string.Empty;
}

<ul class="navbar-nav">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/index">@fullUserName</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/logout">Выйти</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/login">Войти</a>
        </li>
    }
</ul>